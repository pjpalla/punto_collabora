<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
      <p id="notice"><%= notice %></p>
      
      <h1><span class="homeh1color1">L</span>isting <span class="homeh1color1">M</span>embers</h1><br/>
      
      <table class="member table table-bordered table-hover">
        <thead>
          <tr>
            <th><%= "Email" %></th>
            <th><%= "Log in effettuati" %></th>
            <th><%= "Data Log in corrente" %></th>
            <th><%= "Data ultimo Log in" %></th>
            <th><%= "Indirizzo IP corrente" %></th>
            <th><%= "Indirizzo IP ultimo Log in" %></th>            
            <th class='icon'><i class="fa fa-eye fa-lg" aria-hidden="true"></i></th>
            <th class='icon'><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></th>
            <th class='icon'><i class="fa fa-eraser fa-lg" aria-hidden="true"></i></th>      
          </tr>
        </thead>
      
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.email %></td>
              <td><%= member.sign_in_count %></td>
              <td><%= member.current_sign_in_at %></td>
              <td><%= member.last_sign_in_at %></td>  
              <td><%= member.current_sign_in_ip %></td>
              <td><%= member.last_sign_in_ip %></td>              
              
              <td><%= link_to 'Show', member %></td>
              <td><%= link_to 'Edit', edit_member_path(member) %></td>
              <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

  </div>
</div>

<br>

