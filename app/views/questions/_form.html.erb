<%= form_for :question do |f| %>
    <% if @question.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>
  
        <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field form-group">
        <%= f.label :qid, "question id".upcase %><br/>
        <%= f.text_field :qid, autofocus: true, value: @question.qid, class: 'form-control', readonly: true %>
    </div><br/>
    
     <div class="field form-group">
        <%= f.label "question text" %><br/>
        <%= f.text_area :qtext, value: @question.qtext, autofocus: true, class: 'form-control', include_blank: true %>
    </div><br/>
 
  <div class="actions form-group">
    <%= f.submit "Registra", class: 'btn btn-success' %>
  </div>
<% end %>
