                <td><%= ad.typology%></td>
                <td><%= ad.choice%></td>
                <td><%= link_to 'Show', advice_path(ad) %></td>
                <!--<td><%#= link_to 'Edit', edit_advice_path(ad) %></td> -->
                <td><%= link_to 'Rimuovi', @advice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
